# JollyJet E-commerce Platform Environment Variables

# Environment Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/jollyjet

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# Logging Configuration
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Swagger Configuration
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# Performance Configuration
REQUEST_TIMEOUT=30000
RESPONSE_COMPRESSION=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Error Handling Configuration
ERROR_STACK_TRACE=true
ERROR_LOGGING=true

# Email Configuration (Optional)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@jollyjet.com

# SMS Configuration (Optional)
SMS_SERVICE=twilio
SMS_ACCOUNT_SID=
SMS_AUTH_TOKEN=
SMS_FROM_NUMBER=

# Payment Configuration (Optional)
PAYMENT_GATEWAY=stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Analytics Configuration (Optional)
ANALYTICS_ENABLED=false
GOOGLE_ANALYTICS_ID=
AMPLITUDE_API_KEY=

# Sentry Configuration (Optional)
SENTRY_ENABLED=false
SENTRY_DSN=

# New Relic Configuration (Optional)
NEW_RELIC_ENABLED=false
NEW_RELIC_LICENSE_KEY=

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Docker Configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE=jollyjet-starter
DOCKER_TAG=latest

# CI/CD Configuration
CI=true
CI_COMMIT_SHA=
CI_COMMIT_BRANCH=
CI_COMMIT_TAG=

# Monitoring Configuration
MONITORING_ENABLED=false
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# Feature Flags
FEATURE_FLAG_PAYMENTS=true
FEATURE_FLAG_ANALYTICS=false
FEATURE_FLAG_SMS_NOTIFICATIONS=false
FEATURE_FLAG_EMAIL_NOTIFICATIONS=true

# Development Configuration
DEVELOPMENT_MODE=true
DEBUG_ENABLED=true
HOT_RELOAD=true

# Production Configuration
PRODUCTION_MODE=false
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=